          <i class="fas fa-bars" type="button" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
          <div class="dropdown-menu dropdown-menu-right dropdown-card" aria-labelledby="navbarDropdown" data-behavior="notification-items">
              <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
              <%= link_to "Bookings", bookings_path, class: "dropdown-item" %>
              <%= link_to "Favourites", favourites_path, class: "dropdown-item" %>
              <%= link_to "Notifications", notifications_path, class: "dropdown-item" %>
              <%= link_to "Messages", messages_path, class: "dropdown-item" %>
